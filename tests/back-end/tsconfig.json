{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "back-end/*": ["../../src/back-end/*"],
      "shared/*": ["../../src/shared/*"]
    },
    "types": ["node", "mocha"]
  },
  "include": [
    "**/*.ts"
  ]
}
