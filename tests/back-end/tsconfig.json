{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
    "baseUrl": "../../src",
    "incremental": true,
    "paths": {
      "back-end/*": ["back-end/*"],
      "front-end/*": ["front-end/*"],
      "shared/*": ["shared/*"],
      "migrations/*": ["migrations/*"],
      "helpers/*": ["../tests/back-end/unit/helpers/*"]
    },
    "types": ["node", "mocha"]
  },
  "include": [
    "**/*.ts"
  ]
}
